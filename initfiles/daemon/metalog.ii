# NAME: Metalog
# DESCRIPTION: System logger
# WWW: http://metalog.sourceforge.net

daemon daemon/metalog {
	provide = virtual/syslog;
#ifd debian
	need = system/bootmisc daemon/syslogd/prepare;
#elsed
	need = system/bootmisc;
#endd
	exec daemon = @/usr/sbin/metalog@;
	respawn;
	daemon_stops_badly;
}
